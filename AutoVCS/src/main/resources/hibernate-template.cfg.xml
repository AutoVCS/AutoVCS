<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<!--- copy (do not rename!) this file to hibernate.cfg.xml, then put your database password on line 24 --->

<hibernate-configuration>
	<session-factory>

		<!-- SQL dialect -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- Drop and re-create the database schema on startup -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<!-- Connection properties -->
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost/AutoVCS?createDatabaseIfNotExist=true&amp;allowPublicKeyRetrieval=true&amp;autoReconnect=true
		</property>

		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="hibernate.connection.pool_size">10</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">false</property>

		<!-- List of persistent classes -->
		<mapping class="edu.ncsu.csc.autovcs.models.persistent.GHCommit" />
		<mapping class="edu.ncsu.csc.autovcs.models.persistent.GHRepository" />
		<mapping class="edu.ncsu.csc.autovcs.models.persistent.GitUser" />
		<mapping class="edu.ncsu.csc.autovcs.models.persistent.GHPullRequest" />
		<mapping class="edu.ncsu.csc.autovcs.models.persistent.GHComment" />
		<mapping class="edu.ncsu.csc.autovcs.models.persistent.GHFile" />

	</session-factory>
</hibernate-configuration>